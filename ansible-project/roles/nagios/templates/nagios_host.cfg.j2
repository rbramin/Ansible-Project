define host {
  use         linux-server
  host_name   {{ item.key }}
  address     {{ item.value }}
}

define service {
  use                     generic-service
  host_name               {{ item.key }}
  service_description     PING
  check_command           check_ping!100.0,20%!500.0,60%
}

define service {
  use                     generic-service
  host_name               {{ item.key }}
  service_description     CPU Load
  check_command           check_nrpe!check_load
}

define service {
  use                     generic-service
  host_name               {{ item.key }}
  service_description     Disk
  check_command           check_nrpe!check_disk
}
